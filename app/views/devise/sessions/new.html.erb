<div class='container'>
  <h2 class='mt-4 mb-5 d-flex justify-content-center'>Cameamea</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'd-flex justify-content-center'}) do |f| %>
    <div class='col-md-4'>
      <div class="form-inputs">
        <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" },
                wrapper_html: { class: 'mt-4' } %>
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, 
                      as: :boolean,
                      wrapper_html: { class: 'mt-4' } %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class:'btn btn-primary w-100 mt-4' %>
      </div>
    <% end %>
    <%#= render "devise/shared/links" %>
  </div>
</div>
